									<li><a href="{{ path('app_usr_article_index', {'iduser': app.user.userIdentifier }) }}">My bids</a></li>
									<li><a href="{{ path('user_profile_edit', {'iduser': app.user.userIdentifier }) }}">Setting </a></li>
									<li><a href="{{ path('app_logout') }}"> Logout</a></li>
								</ul>
							</li>

							<button><a class="postnewcar" href="{{ path('app_article_new') }}">POST NEW ARTICLE</a></button>
						{% endif %}

