							<!-- User's name on the left side -->
							<li class="user-name">
								<span class="glyphicon glyphicon-user" aria-hidden="true"></span>
								{{ app.user.nom }}
							</li>
						{% endif %}

						<li class="active"><a href="{{ path('app_article_index') }}">HOME</a> </li>
